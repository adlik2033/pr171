<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Image">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:onClick="Rotate90L"
            android:background="@drawable/rotate90l"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"/>
        <Button
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:onClick="Rotate90R"
            android:background="@drawable/rotate90r"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"/>
"
        <Button
            android:layout_margin="5dp"
            android:background="@drawable/reflectrl"
            android:onClick="ReflectLTR"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"/>
        <Button
            android:layout_margin="5dp"
            android:background="@drawable/reflecttb"
            android:layout_width="50dp"
            android:onClick="ReflectTTB"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</FrameLayout>